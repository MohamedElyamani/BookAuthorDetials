@page
 
@using BookAuthorDetials.Localization
@using BookAuthorDetials.Web.Pages.BookAndAuhtorDet
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModelModel
@inject IStringLocalizer<BookAuthorDetialsResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="bookDto" asp-page="/BookAndAuhtorDet/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewBook"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
