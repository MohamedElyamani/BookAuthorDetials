@page
@using BookAuthorDetials.Localization
@using BookAuthorDetials.Web.Pages.BookAndAuhtorDet
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Authorization


@model IndexModel
@inject IStringLocalizer<BookAuthorDetialsResource> L
@inject IAuthorizationService AuthorizationService
@section scripts
{
    <abp-script src="/Pages/BookAndAuhtorDet/Index.js" />
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <h2>@L["BookAndAuhtorDet"]</h2>
            </abp-column>
            <abp-column size-md="_6">
               
                 
                    <abp-button id="NewBookButton"
                                text="@L["NewBook"].Value"
                                icon="plus"
                                button-type="Primary" />
                 
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="BookTable"></abp-table>
    </abp-card-body>
</abp-card>